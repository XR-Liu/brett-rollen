<!DOCTYPE html>
<html>
    <header>
        <p>
        <a href="/login">
        <img border="0" src="logo.jpg" width="100" height="100"
        title="Zur Startseite :)">
        </a>
        </p>
        <h1>deineDaten</h1>
    </header>
    <head>
        <link href="main.css" rel="stylesheet" type="text/css">
    </head>

    <body>
        <form action="/register" method="POST">
            <div class="card">
                <!--<div class="headline">Registrierung</div> -->
    
                <% if (error != null) { %> 
                    <div class="error"><%= error %></div>
                <% } %>
                <p>
                <label for="name">Name:</label>
                <input type="text" name="name" placeholder="Vorname, Nachname" required> <br>
                </p>
                <label for="straße">Straße und Hausnummer:</label>
                <input type="text" name="straße" placeholder="Straße und Hausnummer" required> <br>
                </p>
                <p>
                <label for="plz">Postleitzahl:</label>
                <input type="text" name="plz" placeholder="Postleitzahl" required> <br>
                </p>
                <p>
                <label for="ort">Ort:</label>
                <input type="text" name="ort" placeholder="Ort" required>
                </p>
            </div>
            <div class="card">
    
                <% if (error != null) { %> 
                    <div class="error"><%= error %></div>
                <% } %>
                <p>
                <label for="iban">IBAN:</label> 
                <input type="text" name="iban" placeholder="IBAN" required> <br>
                </p>
                <p>
                <label for="email">E-Mail:</label>
                <input type="text" name="email" placeholder="E-Mail" required> <br>
                </p>
                <p>
                <label for="password">Passwort:</label>
                <input type="password" name="password" placeholder="Passwort" required> <br>
                </p>
                <p>
                <label for="passwordConfirm">Passwort wiederholen:</label> 
                <input type="password" name="passwordConfirm" placeholder="Passwort wiederholen" required> <br>
                </p>
            
                <button type="submit">Registrieren</button>
            </div>
        </form>
    </body>
</html>